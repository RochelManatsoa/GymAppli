<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_email"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_image"
                android:hint="Adresse mail"
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/email"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_password"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_email"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/password"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forget_password_link"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_password"
                android:padding="4dp"
                android:text="Mot de passe oublié?"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_btn"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/forget_password_link"
                android:hint="Se connecter"
                android:inputType="textPassword"
                android:background="@drawable/buttons"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/need_new_account_link"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_btn"
                android:padding="4dp"
                android:text="Créer un profil"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_using"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/need_new_account_link"
                android:padding="4dp"
                android:text="ou se connecter avec"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_login_btn"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_using"
                android:hint="Téléphone"
                android:inputType="textPassword"
                android:background="@drawable/buttons"
                android:drawableLeft="@drawable/phone"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>