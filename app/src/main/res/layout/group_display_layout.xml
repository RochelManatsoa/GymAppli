<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/group_image"
            android:src="@drawable/ic_group_40"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/group_display_name"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Nom du groupe"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CrÃ©e par "
                    android:textColor="@color/purple_500"
                    android:textSize="10sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/group_display_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilisateur"
                    android:textColor="@color/purple_500"
                    android:textSize="10sp"
                    android:gravity="start" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/group_display_description"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Desctiption"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="le "
                    android:textSize="10sp"
                    android:textColor="@color/purple_500"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/group_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_500"
                    android:text="18 Jan 2021"
                    android:textSize="10sp"
                    android:gravity="start" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>